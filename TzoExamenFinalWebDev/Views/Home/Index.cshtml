<div class="container mt-4">
    <!-- Gestión de Estados de Ticket -->


    <!-- Gestión de Tickets -->
    <div class="card mb-4" style="border-radius:15px">
        <div class="card-body">
            <h5 class="card-title">Tickets</h5>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titulo</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="ticketsList"></tbody>
            </table>
        </div>
    </div>

    <!-- Gestión de Detalles de Ticket -->
    <div class="card mb-4" style="border-radius:15px">
        <div class="card-body">
            <h5 class="card-title">Gestión de Detalles de Ticket</h5>
            <div class="input-group mb-3">
                <input type="text" id="ticketId" class="form-control form-control-sm" placeholder="ID del Ticket" disabled>
            </div>   
            <div class="input-group mb-3">
                <div class="form-check me-2">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" onclick="cargarCrear()" checked>
                    <label class="form-check-label" for="flexRadioDefault1">
                        Crear
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" disabled>
                    <label class="form-check-label" for="flexRadioDefault2">
                        Editar
                    </label>
                </div>
            </div>
            <div class="input-group mb-3">
                <textarea id="descripcionDetalle" class="form-control form-control-sm" placeholder="Descripción del Detalle"></textarea>
            </div>
            <button type="button" class="btn btn-primary btn-sm" onclick="addDetalle()" id="btn-guardar" value="" onclick="addDetalle()">Guardar</button>
            <h6 class="mt-3">Lista de Detalles del Ticket</h6>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ticket ID</th>
                        <th>Descripción</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody id="detallesList"></tbody>
            </table>
        </div>
    </div>
</div>
